{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('categorie.ajout') }}" class="btn btn-default">Ajout categorie</a>
    <h3 class="page-header">Liste des Categories</h3>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for cat in categories %}
            <tr>
                <td>{{ cat.nom }}</td>
                <td>
                    <a href="{{ path('categorie.edit' , {id : cat.id} ) }}" class="btn btn-success">Edit</a> |
                    <a href="{{ path('categorie.delete', {id : cat.id} ) }}" class="btn btn-danger">Supprime</a>
                </td>
            </tr>
                {% endfor %}
        </tbody>
    </table>
{% endblock %}