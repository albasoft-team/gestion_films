{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('film_new') }}" class="btn btn-default">Create a new film</a>
    <h1 class="page-header">Liste des films</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Categorie</th>
                <th>Acteurs</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for film in films %}
            <tr>
                <td><a href="{{ path('film_show', { 'id': film.id }) }}">{{ film.id }}</a></td>
                <td>{{ film.titre }}</td>
                <td>{{ film.description }}</td>
                <td>{{ film.categorie.nom }}</td>
                <td>
                    <select class="selectpicker">
                        {% for acteur in film.acteur %}
                            <option>{{ acteur.nom }}</option>
                        {% endfor %}
                    </select>
                </td>
                <td>
                     <a href="{{ path('film_show', { 'id': film.id }) }}" class="btn btn-default">show</a> |
                     <a href="{{ path('film_edit', { 'id': film.id }) }}" class="btn btn-success">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
